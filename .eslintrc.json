{
	"parser":"@babel/eslint-parser",
	"env": {
		"browser": true
	},
	"extends": "airbnb-base",
	"overrides": [{
		"files": "['*.js']",
		"excludedFiles": "babel.config.js'"
	}],
	"parserOptions": {
		"ecmaVersion": 7,
		"sourceType": "module"
	},


	"rules": {
		"no-console":"off",
		"max-classes-per-file": ["error", 2],
		"no-underscore-dangle": [
			"error",
			{"allow": ["_name", "_code", "_year", "_location"],
			 "allowAfterThis": true }
		],
		"import/extensions": [
			"error", {
				"js":"ignorePackages"
			}
		]
	}
}
