{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"overrides": [
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			2
		],

		"linebreak-style": [
			"error",
			"unix"
		],

		"no-trailing-spaces":
		"error",

		"padded-blocks": [
			"error",
			"always"],

		"space-infix-ops": [
			"error",
			{ "int32Hint": false }],

		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
