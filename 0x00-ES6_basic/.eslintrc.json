{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"overrides": [
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			2
		],

		"linebreak-style": [
			"error",
			"unix"
		],

		"no-trailing-spaces":
		"error",

		"padded-blocks": [
			"error",
			"never"],

		"object-curly-spacing": [
			"error",
			"always"],

		"object-curly-newline": [
		"error",
		"always"],

		"key-spacing": [
		"error",
		{ "beforeColon": false }],

		"comma-dangle": [
			"error",
			{"objects": "always"}],

		"eol-last": [
			"error",
			"always"],

		"no-multi-spaces":
		  "error",

		"space-before-blocks": "error",

		"space-infix-ops": [
			"error",
			{ "int32Hint": false }],

		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
